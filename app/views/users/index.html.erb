<% if User.find(session[:current_user_id]).role == "admin" %>

<section class="container" style="overflow:none;">
<%= button_to "Back", cafe_path, method: :get, class: "btn btn-outline-primary btn-sm" %>
<br/>
<h4 style=text-align:center;>Users</h4>
  <hr style="border:1px solid black;">
  <br/>
<table class="table table-striped table-hover" style="text-align:center;">
<thead>
<th>Name</th>
<th>Email</th>
<th>Role</th>
<th>Actions</th>
</thead>
<tbody>

<% @users.each do |user| %>
<tr>
<td><%= user.name %></td>
<td><%= user.email %></td>
<td><%= user.role %></td>
<td>
            <div class="btn-group dropstart">
        <i class=" btn dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false"></i>
          <ul class="dropdown-menu" >
            <li><p class="MenuCategoryDropdown-text" ><%= link_to "Show User", user, class: "rails_link_to" %></p></li>
            <li><p class="MenuCategoryDropdown-text" ><%= link_to "Edit User", edit_user_path(user), class: "rails_link_to" %></p></li>
            <li><p class="MenuCategoryDropdown-text" ><%= link_to "Destroy User", user, method: :delete, data: { confirm: "Are you sure?" }, class: "rails_link_to" %></p></li>
            <% # <li><hr class="dropdown-divider"></li> %>
          </ul>
        </div>
</td>
</tr>
<% end %>
</tbody>
</table>
<br/>

</section>
<% end %>