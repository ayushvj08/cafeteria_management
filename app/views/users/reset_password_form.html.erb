<h3 class="NewUsers-title" style=text-align:center;margin-top:30px;>Reset Password!</h3>
<br/>
<section class="container UsersNew" >

<%= form_with(url: user_reset_password_path) do |form| %>
    <div class="form-group Form-section" style="display:none;">  
        <%= form.email_field :email, :value => @user.email, class: "form-control Form-Input" %>
    </div>
    <div class="form-group Form-section" style="display:none;">  
        <%= form.password_field :encrypt, :value => @encrypt, class: "form-control Form-Input" %>
    </div>
   <br/>
    <div class="form-group Form-section">  
        <%= form.password_field :password, placeholder: :password, class: "form-control Form-Input", required: "required" %>
    </div>
       <br/>
    <div class="form-group Form-section">  
        <%= form.password_field :confirm_password, placeholder: :confirm_password, class: "form-control Form-Input", required: "required" %>
    </div>

    <div class="form-group Form-section">
        <%= form.submit "Submit", class: "btn btn-success", style: "margin-top:20px;color:#fff;" %>
    </div>

<% end %>

</section>