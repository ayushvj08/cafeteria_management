<section class="container UsersNew" >

<%= form_with(url: users_path) do |form| %>
    <div class="form-group Form-section" style="display:none;">  
        <%= form.text_field :role, :value => @new_user[:role], class: "form-control Form-Input" %>
    </div>

    <br/>
    <div class="form-group Form-section">  
        <%= form.text_field :name, placeholder: :name, class: "form-control Form-Input" %>
    </div>
   <br/>
    <div class="form-group Form-section">  
        <%= form.email_field :email, placeholder: :email, class: "form-control Form-Input" %>
    </div>
   <br/>
    <div class="form-group Form-section">  
        <%= form.password_field :password, placeholder: :password, class: "form-control Form-Input" %>
    </div>

    <div class="form-group Form-section">

        <%= form.submit "Sign-up", class: "Form-submit btn btn-success", style: "margin-top:20px;color:#fff;" %>
    </div>
<% end %>

</section>