<img class='bg-img'>
<main class='Has-bg-img'><section class="container UsersNew" >

<h3 class="NewUsers-title" style=font-family:Poppins;font-weight:800;text-align:center;margin-top:30px;>Welcome new User!</h3>

<%= form_with(url: users_path) do |form| %>
    <div class="form-group Form-section" style="display:none;">  
        <%= form.text_field :role, :value => @new_user[:role], class: "form-control Form-Input" %>
    </div>

    <br/>
    <div class="form-group Form-section">  
        <%= form.text_field :name, placeholder: :name, class: "form-control Form-Input", autofocus: "autofocus" %>
    </div>
   <br/>
    <div class="form-group Form-section">  
        <%= form.email_field :email, placeholder: :email, class: "form-control Form-Input", required: "required" %>
    </div>
   <br/>
    <div class="form-group Form-section">  
        <%= form.password_field :password, placeholder: :password, class: "form-control Form-Input", required: "required" %>
    </div>

    <div class="form-group Form-section">

        <%= form.submit "Sign-up", class: "Form-submit btn btn-primary", style: "margin-top:20px;" %>
    </div>
<% end %>
<br/>

<div class='form-divert'>
<p class='signup'>Already have an account? </p><%= link_to "Go to Login", sessions_path, class: "btn-sm btn-secondary", style: "color:#fff;text-decoration:none;" %>
</div>

</section>
</main>
