<div class="container">
<h2>Editing User</h2>

<%= form_with url: user_path, method: :put do |form| %>

    <div class="form-group Form-section"  >  
        <% form.label :role, class: "form-label" %>
        <%= form.text_field :role, :value => @user[:role], class: "form-control Form-Input", style: "display:none;" %>
    </div>

    <br/>
    <div class="form-group Form-section"> 
        <%= form.label :name, class: "form-label" %> 
        <%= form.text_field :name, :value => @user[:name], class: "form-control Form-Input" %>
    </div>
   <br/>
    <div class="form-group Form-section"> 
        <%= form.label :email, class: "form-label" %> 
        <%= form.email_field :email, :value => @user[:email], class: "form-control Form-Input", required: "required" %>
    </div>
   <br/>
    <div class="form-group Form-section"> 
        <%= form.label :password, class: "form-label" %> 
        <%= form.password_field :password, palceholder: :password, class: "form-control Form-Input", required: "required" %>
    </div>

    <div class="form-group Form-section">

        <%= form.submit "Update", method: :patch, class: "Form-submit btn btn-success", style: "margin-top:20px;color:#fff;" %>
    </div>
<% end %>

<br/>

<% if @current_user.role == "customer" %>
 <%= link_to "Back", cafe_path, class: "btn btn-outline-primary btn-sm" %>
<% else %>
<%= link_to "Back", users_path, class: "btn btn-outline-primary btn-sm" %>
<% end %>

</div>