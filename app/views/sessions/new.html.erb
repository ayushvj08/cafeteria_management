<img class='bg-img'>
<main class='Has-bg-img'>
<h3 class="NewUsers-title"  style=font-weight:800;font-family:Poppins;text-align:center;margin-top:30px;>Sign In!</h3>
  
  <br/>

<section class="container UsersNew">

<%= form_with url: sessions_path do |form| %>

    <div class="form-group Form-section">  
        <% # <p class="FormInput-label">Email <span>*</span> </p> %>
        <%= form.email_field :email, placeholder: :email, class: "form-control Form-Input", autofocus: "autofocus", required: "required" %>
    </div>
   
    <div class="form-group forgotPassword-container" style="text-align:right;">  
        <%= link_to "forgot password?", reset_password_path, class: "forgotPassword" %>
    </div>
    <div class="form-group Form-section">  
        <% # <p class="FormInput-label">Password <span>*</span> </p> %>
        <%= form.password_field :password, placeholder: :password, class: "form-control Form-Input", required: "required" %>
    </div>
    <div class="form-group Form-section">
        <%= form.submit "Login", class: "Form-submit btn btn-primary", style: "margin-top:20px;" %>
    </div>

<% end %>
<br/>
<div class='form-divert'>
<p class='signup'>New to HotCafe?</p> <%= link_to "Go to Signup", new_user_path(:role => "customer"), class: "btn-sm btn-secondary", style: "color:#fff;text-decoration:none;" %>
</div>

</section>
</main>
